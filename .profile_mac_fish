# .profile

### env
# common
set -x PATH /usr/local/bin $PATH
set -x PATH $HOME/.local/bin $PATH
set -x PKG_CONFIG_PATH /usr/local/lib/pkgconfig
set -x LIBRARY_PATH $LIBRARY_PATH /usr/local/opt/openssl/lib

# brew
set -x HOMEBREW_CASK_OPTS "--appdir=/Applications"

# java
set -x JAVA_HOME (/usr/libexec/java_home -v "11")
set -x _JAVA_OPTIONS "-Dfile.encoding=UTF-8"
set -x PATH $JAVA_HOME/bin $PATH

# python
set -x PATH $HOME/.pyenv/bin $PATH
eval (pyenv init - | source)

# nodeenv
set -x PATH $HOME/.nodenv/bin $PATH
eval (nodenv init - | source)
set -x PATH $HOME/.nodenv/versions/*/bin $PATH

# go
set -x PATH $HOME/.goenv/bin $PATH
set -x GOENV_DISABLE_GOPATH 1
eval (goenv init - | source)
set -x GOPATH $HOME/go
set -x PATH $GOPATH/bin $PATH

# direnv
eval (direnv hook fish | source)

# android
set -x ANDROID_SDK_ROOT /Volumes/subvol2/android-sdk
set -x ANDROID_SDK_HOME $ANDROID_SDK_ROOT
set -x ANDROID_HOME $ANDROID_SDK_ROOT
set -x PATH $ANDROID_HOME/bin $ANDROID_HOME/tools $ANDROID_HOME/platform-tools $PATH

# fzf
set -x FZF_DEFAULT_OPTS "--extended --cycle --reverse --ansi --select-1 --exit-0 --multi"

# misc
set -x EDITOR "nvim -p"


### alias
# common
alias jq="jq -C"
alias sudo="sudo -H -E"
alias vi="nvim -p"
alias vim="nvim -p"
alias mvim="mvim --remote-tab-silent"
alias gvim="mvim --remote-tab-silent"

# android
alias adbp="adb-peco"
alias installapp='find . -name *.apk | peco | xargs adb install -r'
alias uninstallapp='adb-peco shell pm list package | sed -e s/package:// | peco | xargs adb-peco uninstall'

