  type Options struct {
    Verbose []bool \`short:"v" long:"verbose" description:"Verbose output"\`
  }

  func getopt() Options {
    // flags "github.com/jessevdk/go-flags"
  
    var opts Options

    _, err := flags.Parse(&opts)
    if err != nil {
      os.Exit(1)
    }

    return opts
  }

