[core]
    editor = vim
    pager=cat
	fileMode = true
	precomposeunicode = true
	excludesfile = /Users/hoshino/.gitignore_global
[user]
	name = hoshino
	email = krallice.untitled@gmail.com
[color]
	ui = true
[credential]
	helper = cache
[http]
	sslVerify = false
[tig "bind"]
    generic = g move-first-line
    generic = G move-last-line
[alias]
    cm = commit --allow-empty-message -am ""
    #tree = log --oneline --decorate --graph
    tree = log --all --full-history --graph --date=short --pretty=format:\"%Cgreen%h %cd %Cblue%cn %Cred%d %Creset%s\"
    co = checkout
    st = status
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = matching
