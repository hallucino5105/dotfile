{
    // general
    "breadcrumbs.enabled": true,
    "extensions.ignoreRecommendations": false,
    "remote.SSH.remotePlatform": {
        "vm": "linux"
    },

    // debug
    "debug.inlineValues": true,
    "debug.console.fontFamily": "Source Code Pro, Menlo, Monaco, 'Courier New', monospace",

    // explorer
    "explorer.openEditors.visible": 5,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // workbench
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.showIcons": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.openPositioning": "last",
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.startupEditor": "none",
    "workbench.activityBar.visible": true,
    "workbench.editor.labelFormat": "short",
    "workbench.sideBar.location": "left",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Community Material Theme Darker",
    "workbench.preferredHighContrastColorTheme": "Default Dark+",

    // window
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "window.newWindowDimensions": "default",

    // keyboard
    "keyboard.dispatch": "keyCode",

    // editor
    "editor.fontSize": 12.5,
    "editor.fontFamily": "Source Code Pro, 源ノ角ゴシック JP, Menlo, Monaco, 'Courier New', monospace",
    "editor.wordWrap": "off",
    "editor.codeLens": false,
    "editor.minimap.enabled": false,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.renderWhitespace": "none",
    "editor.renderLineHighlight": "all",
    "editor.renderControlCharacters": true,
    "editor.cursorBlinking": "smooth",
    "editor.autoIndent": "advanced",
    "editor.suggestSelection": "first",
    "editor.quickSuggestionsDelay": 200,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },

    // diffeditor
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,

    // terminal
    "terminal.integrated.fontSize": 11,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rendererType": "experimentalWebgl",

    // files
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": false,
    "files.eol": "\n",
    "files.autoSave": false,
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.svn/**": true,
        "**/backend/**": true,
        "**/node_modules/*/**": true
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },

    // search
    "search.exclude": {
        "tags": true,
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/vendor": true,
        "**/env": true,
        "**/.svn": true,
        "**/.git": true,
        "**/.venv": true,
    },

    // git
    "git.autofetch": true,
    "git.enableSmartCommit": true,

    // crashreport
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // emmet
    "emmet.showAbbreviationSuggestions": false,
    "emmet.showExpandedAbbreviation": "never",

    // vim
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.visualstar": true,
    "vim.useCtrlKeys": true,
    "vim.ignorecase": true,
    "vim.incsearch": true,
    "vim.sneak": true,
    "vim.easymotion": true,
    //"vim.easymotionMarkerFontWeight": "normal",
    //"vim.easymotionMarkerForegroundColorOneChar": "rgba(0, 240, 170, 0.9)",
    //"vim.easymotionMarkerForegroundColorTwoCharFirst": "rgba(0, 240, 170, 0.9)",
    //"vim.easymotionMarkerBackgroundColor": "rgba(10, 10, 10, 0.75)",
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-e>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [{
        "before": ["<C-a>"],
        "after": ["0"],
    }, {
        "before": ["<C-e>"],
        "after": ["$"],
    }, {
        "before": ["^"],
        "after": ["leader", "leader", "w"],
    }, {
        "before": ["-"],
        "after": ["leader", "leader", "b"],
    }],
    "vim.insertModeKeyBindingsNonRecursive": [{
        "before": ["<C-a>"],
        "after": ["0"],
    }, {
        "before": ["<C-e>"],
        "after": ["$"],
    }],
    "vim.visualModeKeyBindingsNonRecursive": [{
        "before": ["<C-a>"],
        "after": ["0"],
    }, {
        "before": ["<C-e>"],
        "after": ["$"],
    }],

    // golang
    "[go]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "go.lintTool": "staticcheck",
    "go.docsTool": "gogetdoc",
    "go.formatTool": "goimports",
    "go.autocompleteUnimportedPackages": true,
    "go.useLanguageServer": true,
    "go.toolsManagement.checkForUpdates": "off",
    "gopls": {
        "completeUnimported": true
    },

    // css
    "css.lint.float": "error",
    "css.lint.propertyIgnoredDueToDisplay": "error",
    "css.lint.universalSelector": "error",
    "css.lint.boxModel": "error",
    "css.lint.duplicateProperties": "error",
    "css.lint.idSelector": "error",

    // python
    "python.languageServer": "Microsoft",
    "python.venvPath": "~/.pyenv",
    "python.venvFolders": [
        "envs",
        ".pyenv",
        ".direnv",
        ".venv",
    ],

    // markdown
    "[markdown]": {
        "editor.quickSuggestions": true,
        "editor.quickSuggestionsDelay": 200,
    },
    "markdown.preview.breaks": true,
    "javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,

    // dart
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            0
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": false,
    },
    "dart.lineLength": 150,

    // html
    "html.format.wrapLineLength": 0,

    // drawio
    "hediet.vscode-drawio.local-storage": "",
    "hediet.vscode-drawio.codeLinkActivated": true,
    "hediet.vscode-drawio.theme": "Kennedy",

    //// setting sync
    //"sync.autoUpload": true,
    //"sync.quietSync": true,
    //"sync.gist": "1838d4afc57b51ee9f0b510e7cfa04bc",

    // omnisharp
    "omnisharp.useGlobalMono": "always",
    "omnisharp.monoPath": "/usr/local/Cellar/mono/6.8.0.105",

    // misc language
    "[c]": {
        "editor.insertSpaces": false,
    },
    "[cpp]": {
        "editor.insertSpaces": false,
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },

    // extend items
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "clipring.maxRingItems": 10,
    "android-dev-ext.appSourceRoot": "",
    "go.toolsManagement.autoUpdate": true,
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "terminal.integrated.tabs.enabled": true,
    "indentRainbow.errorColor": "rgba(128,32,32,0.1)",
    "indentRainbow.tabmixColor": "rgba(128,32,96,0.1)",
    "indentRainbow.colors": [
        "rgba(255,255,64,0.03)",
        "rgba(127,255,127,0.03)",
        "rgba(255,127,255,0.03)",
        "rgba(79,236,236,0.03)"
    ],
}
